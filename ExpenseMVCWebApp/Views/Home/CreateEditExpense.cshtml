@{
    ViewData["Title"] = "Create/Edit";
}

@model ExpenseMVCWebApp.Models.Expense

<div class="text-center">
    <h1 class="display-4">Create or Edit Expenses</h1>
</div>

<form asp-action="CreateEditExpenseForm">
    <label>Id</label>
    <input hidden class="form-control" type="number" placeholder="0" asp-for="Id" />
    <label class="mt-4">Value in $</label>
    <input class="form-control" type="number" placeholder="0" asp-for="Value" step="0.1" />
    <label class="mt-4">Description</label>
    <input class="form-control" type="text" placeholder="Add description" asp-for="Description" />

    <button class="btn btn-primary" type="submit">Submit</button>
</form>
